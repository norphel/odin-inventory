extends layout 

block content 

  h2 #{title}: #{category.name}

  if itemsInCategory.length 
    p #[strong Delete the following items before attempting to delete this category.] 
    div(style="margin-left: 20px; margin-top: 20px;")
      h4 Items 
      dl 
        each item in itemsInCategory 
          dt 
            a(href="/items" + item.url) #{item.name} 
          dd #{item.summary}
          
  else 
    p Do you really want to delete this Category?

    form(method="POST")
      div(class="form-group") 
        input(id="categoryId", class="form-control", type="hidden", name="categoryId", value=category._id)
      button(type="submit") Delete